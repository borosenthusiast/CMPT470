<!DOCTYPE html>
<html lang="en">
<head>
  <title>Fetch using MySQL and Node.js</title>
  <link rel="stylesheet" type="text/css" href="/userlist/userlist.css">
  <script src="http://code.jquery.com/jquery-latest.js"></script>
</head>
<body>
    <nav id="navbar">
        <h id="appname">MATCHPAW</h>
    </nav>   
<div class="table-data">
<h2>User List</h2>
<p>Type something in the input field to search the table for names, emails or account types:</p>  
<input id="searchInput" type="text" placeholder="Search..">
<br><br>
    <table border="1">
        <thead>
        <tr>
            <th>ID</th>
            <th>User Name</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email Address</th>
            <th>Account Type</th>
        </tr>
        </thead>
        <%
        if(userData.length!=0){
        var i=1;
        userData.forEach(function(data){
        %>
        <tbody id="userTable">
        <tr>
            <td><%=i; %></td>
            <td><%=data.username %></td>
            <td><%=data.first_name %></td>
            <td><%=data.last_name %></td>
            <td><%=data.email %></td>
            <td><%=data.account_type %></td>
        </tr>
        </tbody>
        <%  i++; }) %>
        <% } else{ %>
            <tr>
                <td colspan="7">No User Found</td>
            </tr>
        <% } %>
    </table>
    </div>
</body>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="/userlist/userlist.js"></script>
</html>